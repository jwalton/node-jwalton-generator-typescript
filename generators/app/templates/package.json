{
  "name": "<%= npmName %>",
  "version": "0.0.0-semantic-release",
  "description": "<%= projectDescription %>",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/**/*",
    "types/**/*"
  ],
  "scripts": {
    "test": "npm run build && npm run lint && npm run test:unittest",
    "precommit:test": "npm run build && lint-staged && npm run precommit:unittest",
    "build": "tsc",
    "clean": "rm -rf dist types coverage",
    "test:unittest": "tsc -p test && nyc mocha 'test/**/*.@(ts|tsx|js|jsx)'",
    "precommit:unittest": "tsc -p test && mocha --reporter progress 'test/**/*.@(ts|tsx|js|jsx)'",
    "lint": "npm run lint:source && npm run lint:markdown && npm run lint:tests",
    "lint:source": "tslint -c tslint.json -t stylish 'src/**/*.@(ts|tsx)'",
    "lint:tests": "tslint -c test/tslint.json -t stylish 'test/**/*.@(ts|tsx)'",
    "lint:markdown": "markdownlint **/*.md *.md",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "src/**/*.ts": ["tslint -c tslint.json -t stylish"],
    "test/**/*.ts": ["tslint -c test/tslint.json -t stylish"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubProject %>.git"
  },
  "keywords": <%- keywords %>,
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>",
    "url" : "<%= authorUrl %>"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exegesis-js/<%= githubProject %>/issues"
  },
  "homepage": "https://github.com/<%= githubProject %>#readme",
  "devDependencies": {
    "@types/node": "^<%= minNodeVersion %>.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run test:pre-commit"
    }
  }
}
